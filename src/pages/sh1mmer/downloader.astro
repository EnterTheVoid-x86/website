---
import "@fontsource/inter";
import '../../../public/sh1mmer/downloader/style.sass';
import { CssVarsProvider, Box, Alert } from "@mui/joy";
---

<!doctype html>
<html lang="en">
  <head>
    <title>Glitz Downloader</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta charset="UTF-8" />
    <meta property="og:title" content="Rehosted SH1mmer" />
    <meta property="og:description" content="SH1mmer: Downloader" />
    <meta property="og:url" content="https://darkn.bio/sh1mmer/downloader" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://darkn.bio/img/download.webp" />
    <meta property="og:image:alt" content="SH1mmer" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:site_name" content="SH1mmer" />
    <link rel="icon" href="/img/download.webp" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preload" href="/sh1mmer/downloader/script.js" as="script" />
    <script is:inline src="/sh1mmer/downloader/script.js"></script>
  </head>
  <CssVarsProvider defaultMode="dark">
    <body onload="start()">
      <div class="center">
      <Box
        sx={{
          display: "flex",
          alignItems: "center",
          justifyContent: "center",
          flexDirection: "column",
          width: "100%",
          pt: "10px",
          mb: "-30px",
        }}
      >
        <Alert
          id="defectiveMirrorAlert"
          sx={{ display: "none", marginBottom: "7px" }}
          color="danger"
          variant="outlined"
          size="lg"
        >
          The chosen mirror is defective! Reloading in 7 seconds...
        </Alert>
        <Alert
          id="dataAlert"
          sx={{ display: "none" }}
          color="danger"
          variant="outlined"
          size="lg"
        >
          Data error! Unable to fetch <code>data.json</code>.
        </Alert>
      </Box>
      <br />
      <h1>Glitz - RMA Shim Downloader</h1>

      <p>
        Glitz is a collection of mirrors for publicly-leaked Chromebook RMA
          shims. <br />
        Currently, Glitz provides five different mirrors to download shims 
          from.<br />
      </p>

      <select id="mirror" style="margin-right: 4px;">
        <option>select a mirror</option>
      </select>

      <select id="file" style="margin-left: 5px; display: none;">
        <option>select a board</option>
      </select>

      <button id="download" style="margin-left: 9px; display: none;"
        >download</button
      >

      <br />
      <div class="float">
        <h3>
          In order to use SH1mmer, you need to inject the shims <a href=
          "/sh1mmer/builder">here</a>.
          <br />
           These files aren't endorsed by <a href="https://mercurywork.shop"
           >Mercury Workshop</a>.
        </h3>
      </div>

      <h3>
        <a href="https://discord.gg/bAgNyGpXSx">discord</a> •
        <a href="/">website</a> •
        <a href="https://github.com/NotDarkn/website">github</a>
      </h3>

      <details>
        <summary></summary>
        <h2 style="margin-bottom: -10px">website</h2>
        <p>
          hosted & improved by
          <a href="https://discord.com/users/829745505784692776">@notdarkn</a><br
          />
          improved code by
          <a href="https://discord.com/users/836279485984538634">@waveeeeeee</a><br
          />
          originally made by
          <a href="https://discord.com/users/1039648022084202516">@julia_j</a><br
          />
        </p>

        <h2 style="margin-bottom: -10px">hosts</h2>
        <p>
          dl.kxtz.dev by
          <a href="https://discord.com/users952792525637312552">@kxtzownsu</a><br
          />
          sh1m.b0vik.dev by
          <a href="https://discord.com/users/609942266953465856">@twinspikes</a><br
          />
          diffusehyperion.com by
          <a href="https://discord.com/users/301279262994857987"
            >@diffusehyperion</a
          ><br />
        </p>
      </details>
      
      <p>
        <font size="+3"> ❤️ thank you ❤️</font>
      </p>
      
    </div>

    <div id="snowflake-container"/>
    <script src="../../../public/js/snowflakes.ts"></script>
    <script is:inline src="/sh1mmer/downloader/resetanim.js"></script>
    </body>
  </CssVarsProvider>
</html>
